<h1>Listing helps</h1>

<table>
  <tr>
    <th>Page</th>
    <th>Text</th>
  </tr>

<% @helps.each do |help| %>
  <tr>
    <td><%=h help.page %></td>
    <td><%=h help.text %></td>
    <td><%= link_to 'Show', help %></td>
    <td><%= link_to 'Edit', edit_help_path(help) %></td>
    <td><%= link_to 'Destroy', help, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New help', new_help_path %>